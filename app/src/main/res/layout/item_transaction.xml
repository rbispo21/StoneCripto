<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundButton"
            android:id="@+id/constraintCard">

        <TextView
                android:text="10/10/2018"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDate"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textColor="@color/colorText"/>
        <TextView
                android:text="Compra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtType"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txtDate"
                android:textStyle="bold"
                android:textColor="@color/colorText"/>
        <TextView
                android:text="0.1 BTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCoin"
                app:layout_constraintStart_toEndOf="@+id/txtType"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toTopOf="@+id/txtType"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/txtPrice"/>
        <TextView
                android:text="R$ 1.000,00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtPrice"
                app:layout_constraintTop_toTopOf="@+id/txtCoin"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>