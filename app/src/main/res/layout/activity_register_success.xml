<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorBackground"
        android:layout_height="match_parent"
        tools:context=".registerSuccess.RegisterSuccessActivity">

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/bitcoin_to_the_moon"
            app:lottie_autoPlay="true"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_profit"
            android:id="@+id/imgProfit"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="@+id/animationView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:visibility="gone"/>
    <TextView
            android:text="VocÃª ganhou R$10.000,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBonus"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imgProfit"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:textSize="20sp"
            android:visibility="gone"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescription"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtBonus"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:textColor="@color/colorText"
            android:visibility="gone"
            android:textAlignment="center"
            android:textSize="16sp"/>
    <Button
            android:text="Continuar"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/btnContinue"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/background_button_green"
            android:textColor="@color/colorText"
            android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>